@model _3._Films.Models.Film

@{
    ViewData["Title"] = "Удалить фильм";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Вы уверены, что хотите удалить фильм?</h1>

<div>
    <p>
        Название: @Html.DisplayFor(modelItem => Model.Name)
    </p>
    <img src="@Model.Poster" alt="Постер">
    <p>
        Жанр:
        @foreach (var filmGenre in Model.Genres)
        {
            <span>@filmGenre.Name</span>
            @(filmGenre == Model.Genres.Last() ? "" : ", ")
        }
    </p>
    <p>
        Режиссер: @Html.DisplayFor(modelItem => Model.Director)
    </p>
    <p>
        Год: @Html.DisplayFor(modelItem => Model.Year)
    </p>
    <p>
        @Html.DisplayFor(modelItem => Model.Description)
    </p>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад к списку</a>
    </form>
</div>
